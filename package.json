{
    "name": "precise-money-monorepo",
    "private": true,
    "packageManager": "pnpm@9.0.0",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "pnpm -r --filter ./packages/precise-money... build",
        "test": "pnpm -r --filter ./packages/precise-money... test",
        "lint": "pnpm -r lint",
        "release:dry": "pnpm -r --filter ./packages/precise-money... build && echo 'ready to publish'",
        "release": "npm --workspace packages/precise-money publish --access public"
    },
    "version": "0.0.1"
}
